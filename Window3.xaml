<Window x:Class="BarberShopSalon.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarberShopSalon"
        mc:Ignorable="d"
        Title="Window3" Height="805.5" WindowStartupLocation="CenterOwner" Width="1244">
    <Grid Background="#55c5ff">

        <Grid.RowDefinitions>

            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width=".05*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image Width="450" VerticalAlignment=" Bottom">
            <Image.Style >
                <Style TargetType="Image" >
                    <Style.Triggers >
                        <DataTrigger Binding="{Binding ElementName=StartTypingBtn, Path=IsMouseOver}" Value="True">
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <StackPanel Grid.Column="2" Margin="0 30">
            <TextBlock Text="Добро пожаловать "
                       FontSize="52"
                       Foreground="White"/>
            <Button x:Name="StartTypingBtn" Content="Авторизация"
                    Style="{StaticResource AcceptButton}" Click="StartTypingBtn_Click_1" Height="90" Width="460"/>
            <Button x:Name="StartTypingBtn_Copy" Content="Регистрация"
                    Style="{StaticResource AcceptButton}" Click="StartTypingBtn_Copy_Click" Height="90" Width="460"/>
            <Button x:Name="StartTypingBtn_Copy1" Content="Выход"
                    Style="{StaticResource AcceptButton}" Click="StartTypingBtn_Copy1_Click" Height="90" Width="460"/>
        </StackPanel>

        <Border Grid.Row=" 1" Background=" White" CornerRadius="10" Grid.ColumnSpan="3 "/>

        <StackPanel Grid.Row=" 1" Margin=" 30 40">
            <TextBlock Text="Цены" FontSize="30" Foreground=" #28a4e8"/>
            <TextBlock Text="Наши цены привлекут ваше внимание)" FontSize="20" TextWrapping="Wrap" Foreground=" #5c5c5c"/>
            <TextBlock FontSize=" 20" Foreground=" #28a4e8"/>
        </StackPanel>
        <Border Grid.Row=" 1" Grid.Column=" 1" BorderThickness=" 0.5"
                BorderBrush="#e8e8e8" HorizontalAlignment="Center" Height=" 200"/>
        <StackPanel Grid.Row=" 1" Grid.Column=" 2" Margin=" 30 40">
            <TextBlock Text="Сотрудники"
                       FontSize="30"
                       Foreground=" #28a4e8" />
            <TextBlock Text="Работают только проффесионалы"
                       FontSize=" 20"
                       TextWrapping="Wrap"
                       Foreground=" #5c5c5c"
                       Margin=" 0 10"/>
            <TextBlock FontSize=" 20"
                       Foreground=" #28a4e8">
            </TextBlock>
        </StackPanel>

        <Image Height="570" VerticalAlignment="Top" Margin="0,10,10,0" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Image.Style >
                <Style TargetType="Image" >
                    <Style.Triggers >
                        <DataTrigger Binding="{Binding ElementName=StartTypingBtn, Path=IsMouseOver}" Value="True">
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <Image Source="Image1.png" Stretch="Fill" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
